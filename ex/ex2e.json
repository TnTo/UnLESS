[
    [
        "set_seed",
        {
            "seed": 1238
        }
    ],
    [
        "create",
        {
            "nn_path": "data/nn2e.h5",
            "layers": [
                [
                    1000,
                    "relu",
                    448
                ],
                [
                    1000,
                    "relu"
                ],
                [
                    1,
                    "linear"
                ]
            ]
        }
    ],
    [
        "load_nl",
        {
            "nl_path": "electoral_system.nlogo"
        }
    ],
    [
        "simulate",
        {
            "nn_path": "data/nn2e.h5",
